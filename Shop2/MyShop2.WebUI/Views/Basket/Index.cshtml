@model IEnumerable<MyShop2.Core.ViewModels.BasketItemViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProductName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            Line Total
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td>
                @if (item.Image != null)
                {
                    <img src="~/Content/ProductImages/@item.Image" alt="Image" class="thumbnail" style="max-height:100px" />
                }
                else
                {
                    <p>No Photo</p>
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @string.Format("{0:c}", item.Price * item.Quantity)
            </td>
            <td>
                <a href="@Url.Action("RemoveFromBasket", "Basket",new { ItemId = item.Id })" class="btn btn-danger">Delete</a>

            </td>
        </tr>

    }
    <tr>
        <td colspan="4"></td>
        <td><a href="@Url.Action("CheckOut", "Basket")" class="btn btn-default">Check Out</a></td>
    </tr>
</table>
